{
  "manifest_version": 3,
  "name": "치지직 스트리머 숨기기",
  "version": "1.2.0",
  "description": "치지직에서 원하지 않는 스트리머나 태그를 숨기는 확장 프로그램",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "치지직 스트리머 숨기기"
  },

  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}